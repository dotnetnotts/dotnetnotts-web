@page "/"
@{
    var tabindex = 0;
}

<section id="banner" aria-labelledby="banner-heading">
    <div class="center banner">
    <h3 id="banner-heading" tabindex="@(tabindex)">Site made by the community on <a href="https://github.com/dotnetnotts/dotnetnotts-web" target="_blank" aria-label="GitHub repository (opens in new tab)"><i class="fab fa-github" aria-hidden="true"></i></a></h3>
    </div>
</section>

<section id="about" aria-labelledby="about-heading">
    <br/>
    <h2 id="about-heading" tabindex="@(tabindex)">About Us</h2>
    <div class="center">
       <p tabindex="@(tabindex)"> 
           Welcome! .NET Notts is a monthly user group based in Nottingham, UK.
       </p>
       <p tabindex="@(tabindex)">
           All of our events are currently hosted virtually on Zoom and live streamed to YouTube. You can also keep an eye on our event on the following social media accounts:
       </p>
       <nav aria-label="Social media links">
           <a href="https://twitter.com/dotnetnotts" target="_blank" class="btn btn-light px-5 rounded-pill shadow-sm" tabindex="@(tabindex)" aria-label="Twitter (opens in new tab)">Twitter</a>
           <a href="https://www.meetup.com/dotnetnotts/" target="_blank" class="btn btn-light px-5 rounded-pill shadow-sm" tabindex="@(tabindex)" aria-label="Meetup (opens in new tab)">Meetup</a>
           <a href="https://www.linkedin.com/company/dotnet-notts" target="_blank" class="btn btn-light px-5 rounded-pill shadow-sm" tabindex="@(tabindex)" aria-label="LinkedIn (opens in new tab)">LinkedIn</a>
           <a href="https://www.youtube.com/@dotnetnotts/streams" target="_blank" class="btn btn-light px-5 rounded-pill shadow-sm" tabindex="@(tabindex)" aria-label="YouTube (opens in new tab)">YouTube</a>
       </nav>
    </div>
    <hr/>
</section>

<section id="past-talks" aria-labelledby="past-talks-heading">
<br/>
    <h2 id="past-talks-heading" tabindex="@(tabindex)">Past Events</h2>
    <p class="center" tabindex="@(tabindex)">
        To see talks from our past events head over to our <a href="https://www.youtube.com/@dotnetnotts/streams" target="_blank" aria-label="YouTube Channel (opens in new tab)">YouTube Channel</a>
    </p>
</section>

<section class="sponsors" aria-labelledby="sponsors-heading">
    <h3 id="sponsors-heading" tabindex="@(tabindex)">Our Sponsors</h3>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <a href="https://www.jetbrains.com/" target="_blank" tabindex="@(tabindex)" aria-label="JetBrains (opens in new tab)">
                <img class="sponsors-logo img-thumbnail img-responsive" src="/images/sponsors/jetbrains.png" alt="JetBrains logo">
            </a>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <a href="https://www.bjss.com/" target="_blank" tabindex="@(tabindex)" aria-label="BJSS (opens in new tab)">
                <img class="sponsors-logo img-thumbnail img-responsive" src="/images/sponsors/bjsslogo-1.jpg" alt="BJSS logo">
            </a>
        </div>        
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <a href="https://www.rebelrecruiters.co.uk/" target="_blank" tabindex="@(tabindex)" aria-label="Rebel Recruiters (opens in new tab)">
                <img class="sponsors-logo img-thumbnail img-responsive" src="/images/sponsors/Rebel.png" alt="Rebel Recruiters logo">
            </a>
        </div>        
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <a href="https://www.pjgcreations.co.uk/" target="_blank" tabindex="@(tabindex)" aria-label="PJG Creations (opens in new tab)">
                <img class="sponsors-logo img-thumbnail img-responsive" src="/images/sponsors/pjgcreations.jpg" alt="PJG Creations logo">
            </a>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        </div>
    </div>
</section>
